    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "LasertagServerApplication",
            "request": "launch",
            "mainClass": "net.lasertag.lasertagserver.LasertagServerApplication",
            "projectName": "lasertag-server",
            "cwd": "${workspaceFolder}/server",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "vmArgs": "-Dspring.devtools.restart.enabled=false",
            "shortenCommandLine": "auto",
            "stepFilters": {
                "skipClasses": [],
                "skipSynthetics": false,
                "skipStaticInitializers": false,
                "skipConstructors": false
            }
        }
    ]
}